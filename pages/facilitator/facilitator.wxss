.select-service {
  width: 100%;
  display: flex;
}

.select-service .company {
  width: 100%;
  font-size: 30rpx;
  /* text-align: right; */
  padding: 30rpx 20rpx;
  border: 2rpx solid #ddd;
  color: #949494;
  margin: 20rpx 20rpx;
  border-radius:10rpx 10rpx;
  background:#fff;
}

.select-service .companyname {
  display: inline-block;
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  text-align: left;
}

.addtxt, .faretxt, .Promotiontxt {
  display: block;
  width:15%;
  /* width: 146rpx; */
  float: left;
}

.addDetail, .fareDetail, .PromotionDetail {
  display: block;
  width:85%;
  height: auto;
  float: left;
  text-align: left;
  
}
.select-service .companyadd, .companyfare, .companyPromotion {
  padding: 4rpx 0rpx;
  width: 100%;
  height: auto;
  margin-top:10rpx;
  line-height: 35rpx;
  overflow: hidden;
}
.mob{
  overflow: hidden;
  padding: 6rpx 0rpx;
  display: flex;  
  align-items: center;  
}
 .mob .addDetail{
  display: inline-block;
  width:auto;
} 
.mob-btn{
 float:left;
 width: 20%;
 margin-left: 10rpx;
 padding: 10rpx ;
 background: #390; 
 text-align: center;
 font-size: 28rpx;
 color:#fff;
 border-radius: 5rpx;
}